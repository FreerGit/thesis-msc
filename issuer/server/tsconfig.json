{
  "compilerOptions": {
    "module": "ESNext", // Ensure ESNext module syntax
    "target": "ESNext", // Target ESNext for top-level await and modern JavaScript features
    "moduleResolution": "Node", // Use Node module resolution strategy
    "resolveJsonModule": true, // Allow importing JSON as a module
    "esModuleInterop": true, // Allow mixing CommonJS and ES module imports
    "skipLibCheck": true, // Skip type-checking for declaration files (optional, improves build time)
    "strict": true, // Enable strict mode for better type checking
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true, // Required for TS to work with ES modules
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*"
  ], // Include your TypeScript files
  "exclude": [
    "node_modules"
  ] // Exclude node_modules
}